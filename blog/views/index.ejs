<% include header %>

<!-- 用户名页面 -->

<div id="myCarousel" class="carousel slide">
    <!-- 轮播（Carousel）指标 -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- 轮播（Carousel）项目 -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="/images/suc.jpg" alt="First slide" width="100%">
            <div class="carousel-caption">
                <a href="/users/article/<%= hot[0]._id %>">
                    <h3>
                        标题:
                        <%= hot[0].title%>
                    </h3>
                </a>
                <p>
                    <%= hot[0].content%>
                </p>
                <span>作者:
                    <%= hot[0].username%></span>
                <span>浏览量：
                    <%= hot[0].pv%></span>


            </div>
        </div>
        <div class="item">
            <img src="/images/suc.jpg" alt="Second slide" width="100%">
            <div class="carousel-caption">
                <a href="/users/article/<%= hot[1]._id %>">
                    <h3>
                        标题:
                        <%= hot[1].title%>
                    </h3>
                </a>
                <p>
                    <%= hot[1].content%>
                </p>
                <span>作者:
                    <%= hot[1].username%></span>
                <span>浏览量：
                    <%= hot[1].pv%></span>

            </div>
        </div>
        <div class="item">
            <img src="/images/suc.jpg" alt="Second slide" width="100%">
            <div class="carousel-caption">
                <a href="/users/article/<%= hot[2]._id %>">
                    <h3>
                        标题:
                        <%= hot[2].title%>
                    </h3>
                </a>
                <p>
                    <%= hot[2].content%>
                </p>
                <span>作者:
                    <%= hot[2].username%></span>
                <span>浏览量：
                    <%= hot[2].pv%></span>

            </div>
        </div>
    </div>
    <!-- 轮播（Carousel）导航 -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<ul class="list">
    <% for(var i=0;i<data.length;i++){ %>
    <li>
        <a href="/users/article/<%= data[i]._id %>">
            <h2>
                <%= data[i].title %>
            </h2>
        </a>
        <p>作者：<span>
                <%= data[i].username %> </span></p>
        <p>时间：<span>
                <%= formatTime(data[i].time) %> </span></p>
        <p>浏览次数：<span>
                <%= data[i].pv?data[i].pv:0 %> </span></p>

    </li>
    <% } %>

</ul>

<% if(pageNum > 1){%>
<a href="<%= preUrl %>">上一页</a>
<% } %>

<% if(pages>=5){  for(var i=pageNum;i<=5+pageNum;i++) { %>

<% if(pageNum == i){ %>
<%= i %>
<% }else { %>
<a href="/page/<%= i %>">
    <%= i %> </a>
<% }%>


<% } } %>


<a href="<%= nextUrl %>">下一页</a>



<% if(username){ %>

<form action="/users/publish" method="post">

    标题： <input type="text" name="title">
    <br>
    内容：<textarea id="" cols="30" rows="10" name="content"></textarea>
    <br>

    <input type="submit" value="发表">

</form>

<% } %>






</body>

</html>